@model Employee
@{
   ViewData["Title"] = "Create";
}

<h1>Create</h1>
<hr />
<form asp-controller="Home" asp-action="Create" method="post" class="mt-4">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10"> 
            <input asp-for="Name" class="form-control" placeholder="Name" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
        <input asp-for="Email" class="form-control" placeholder="Email"/>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Departmet" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Departmet" asp-items="Html.GetEnumSelectList<Department>()" class="custom-select mr-sm-2"></select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Create.</button>
        </div>
    </div>
</form>

