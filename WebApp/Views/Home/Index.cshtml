@model IEnumerable<Employee>
@{

    ViewBag.Title = "Employee List";
}



<h1>Employee List</h1>
<hr />

<div class="card-deck">
    @foreach (var employee in Model)
    {

        <div class="card m-3">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <img src="~/images/noimage.png" class="card-img-top" asp-append-version="true" alt="Image Avatar." />
            <div class="card-footer text-center">
                <a  asp-controller="Home" asp-action="Details" asp-all-route-id="@employee.Id"
                   class="btn btn-primary m-1">Details</a>
                <a href="#" class="btn btn-info  m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>
